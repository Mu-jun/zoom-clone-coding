doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    title Cloning Zoom
  body
    header 
      h1 Cloning Zoom
    main 
      section#welcome
        form
          input(type="text" placeholder="room name", required)
          button Enter Room
      section#call(hidden)
        header#roomHeader
          h2
          button leave
        div
          div#peerFaces
          Video#myFace(autoplay, playsinline)
          div
            select#cameras
          button#mute Mute
          button#camera Camera Off
        div#chat
          div
            ul 
          form
            input(type="text" placeholder="write a message", required)
            button Send
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js") 